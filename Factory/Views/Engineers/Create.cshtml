@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer
<h4>Add a new Engineer</h4>

@using (Html.BeginForm())
{
  @Html.Label("Engineer")
  @Html.DropDownList("EngineerId")
  <br>
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)
  <br>
  @Html.LabelFor(model => model.Pay)
  @Html.TextBoxFor(model => model.Pay, new { type = "number", min = "0", max = "3" })
  <br><br>
  <input type="submit" value="Add New Engineer" class="btn btn-default" />
}
<p>
  @Html.ActionLink("Show all Engineers", "Index")
</p> 