@{
  Layout = "_Layout";
}

@using Factory.Models;
@model List<Factory.Models.Engineer>;

<h1>Your Engineers</h1>

@if (@Model.Count == 0)
{
  <h3>
    You haven't hired any Engineers yet!
  </h3>
}

<ul>
  @foreach(Engineer engineer in Model)
  {
    <li>@Html.ActionLink($"{engineer.Name}", "Details", new { id = engineer.EngineerId })</li>
  }
</ul>

<p>
  @Html.ActionLink("Review a Engineer", "Create")
</p>
<p>
  @Html.ActionLink("See all Machines", "Index", "Machines")
</p>

<p>@Html.ActionLink("Return Home", "Index", "Home")</p>


