@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer

<h1>Assigning a Machine to an Engineer:</h1>

<h4>Adding Machine to @Html.DisplayFor(model => model.Name)</h4>

@using (@Html.BeginForm())
{
  @Html.HiddenFor(model => model.EngineerId)

  @Html.Label("Select the Machine to assign.")
  @Html.DropDownList("MachineId")

  <input type="submit" value="Save"/>
}

@Html.ActionLink("Show all Engineers", "Index")