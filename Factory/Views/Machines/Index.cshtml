@{
  Layout = "_Layout";
}

@using Factory.Models;

<h1>All Machines:</h1>

@if (Model.Count == 0)
{
  <p>There are no machines?</p>
}

<ul>
  @foreach (BestRestaurants.Models.Machine machine in Model)
  {
    <li>@Html.ActionLink($"{machine.MachineName}", "Details", new {id = machine.MachineId})</li>
  }
</ul>

<p>@Html.ActionLink("Create a Machine", "Create")</p>
<p>@Html.ActionLink("See All Engineers", "Index", "Engineers")</p>
<p>@Html.ActionLink("Return Home", "Index", "Home")</p>