@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<h1>EDIT</h1>

<h3>You are editing the information for the Machine: @Html.DisplayFor(model => model.MachineName)</h3>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.MachineId)

  @Html.LabelFor(model => model.MachineName)
  @Html.EditorFor(model => model.MachineName)

  <input type="submit" value="Save"/>
}

<p>@Html.ActionLink("See all Machines", "Index", "Machines")</p>
<p>@Html.ActionLink("See All Engineers", "Index", "Engineers")</p>
<p>@Html.ActionLink("Return Home", "Index", "Home")</p>